<div class="container3">

<%= form_with model: @user, html: {class: "form-horizontal", role: "form"} do |form| %>

  <div class="form-group">
    <%= form.label :username, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.text_field :username, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :email, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.text_field :email, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :password, "New Password", class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.password_field :password, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :password_confirmation, "Confirm Password", class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.password_field :password_confirmation, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :gender, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.text_field :gender, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :country, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.country_select :country, {}, {class: "form-control"} %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :profile_picture, class: "control-label col-sm-2" %>
    <div class="col-sm-11">
      <%= form.file_field :profile_picture, class: "form-control-file" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-12">
      <%= form.submit "Update my account", class: "btn btn-primary" %>
    </div>
  </div>

<% end %>
</div>

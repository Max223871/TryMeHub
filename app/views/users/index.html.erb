<div class="container1">
  <h1>Users</h1>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Username</th>
        <th>Email</th>
        <th>Gender</th>
        <th>Country</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.username %></td>
          <td><%= user.email %></td>
          <td><%= user.gender %></td>
          <td><%= user.country %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
